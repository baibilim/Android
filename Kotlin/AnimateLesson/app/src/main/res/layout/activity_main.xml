<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:layout_marginBottom="20dp"
            android:textSize="24sp" />
        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="@string/animate"
            android:layout_marginBottom="30dp"/>
        <Button
            android:id="@+id/animateAlpha"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="animate Alpha" />

        <Button
            android:id="@+id/animateTranslationXYZ"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="animate Translation XYZ" />

        <Button
            android:id="@+id/animateRotation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="animate Rotation" />

        <Button
            android:id="@+id/animateRotationX"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="animate Rotation X" />

        <Button
            android:id="@+id/animateScale"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="animate Scale" />

        <Button
            android:id="@+id/animateDelay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="animate Delay" />

        <Button
            android:id="@+id/animateAction"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="animateAction" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>